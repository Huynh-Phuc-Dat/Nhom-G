<script src="/Areas/SystemUser/Scripts/SystemUserController.js?v=@System_FishKoi.Helper.CommonHelper.GetNewVerson()"></script>
<script src="/Directive/ng-enter.js"></script>
<script src="/Directive/select2.js"></script>
<script>
    addController("SystemUserController", SystemUserController);
    addDirective("ngEnter", ngEnter);
    addDirective("select2", select2);
</script>

<div id="kt_app_content_container" class="app-container container-xxl" ng-controller="SystemUserController">
    <div class="card">
        <div class="card-header border-0 pt-6">
            <div class="card-title">
                <div class="d-flex align-items-center position-relative my-1">
                    <i class="ki-outline ki-magnifier fs-3 position-absolute ms-5"></i>
                    <input type="text" ng-model="filter.keySearch" ng-enter="search()" class="form-control form-control-solid  ps-12" placeholder="Từ khoá">
                </div>
            </div>
            <div class="card-toolbar">
                <div class="d-flex justify-content-end">
                    <a ng-click="showModal()" href="javascript:;" class="btn btn-primary">
                        <i class="ki-outline ki-plus fs-2"></i>  Tạo nhân viên
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body pt-0">
            <div class="dt-container dt-bootstrap5 dt-empty-footer">
                <div id="table-responsive">
                    <table class="table align-middle  table-row-dashed fs-6 gy-5 " id="kt_system_user_table">
                        <thead>
                            <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                                <th>Mã nhân viên</th>
                                <th>Tên nhân viên</th>
                                <th>Email</th>
                                <th>Tình trạng</th>
                                <th class="text-end min-w-70px">#</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>

    <div class="modal fade" id="kt_modal_system_user" tabindex="-1" aria-hidden="true">
        <!--begin::Modal dialog-->
        <div class="modal-dialog modal-dialog-centered mw-650px">
            <!--begin::Modal content-->
            <div class="modal-content">
                <!--begin::Form-->
                <form class="form">
                    <!--begin::Modal header-->
                    <div class="modal-header">
                        <!--begin::Modal title-->
                        <h2 class="fw-bold">{{objSystemUser.UserID >  0 ? 'Cập nhật nhân viên hệ thống' : 'Thêm mới nhân viên hệ thống'  }}</h2>
                        <!--end::Modal title-->
                        <!--begin::Close-->
                        <div data-bs-dismiss="modal" class="btn btn-icon btn-sm btn-active-icon-primary">
                            <i class="ki-outline ki-cross fs-1"></i>
                        </div>
                        <!--end::Close-->
                    </div>
                    <!--end::Modal header-->
                    <!--begin::Modal body-->
                    <div class="modal-body py-10 px-lg-17">
                        <!--begin::Scroll-->
                        <div class="scroll-y me-n7 pe-7">

                            <!--begin::Input group-->
                            <div class="fv-row mb-7">
                                <!--begin::Label-->
                                <label class="required fs-6 fw-semibold mb-2">Mã nhân viên :</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <input ng-disabled="objSystemUser.UserID>0" ng-class="objSystemUser.UserID>0 ? 'fw-bolder' :''" type="text" class="form-control form-control-solid" ng-model="objSystemUser.Username" id="txtUsername" />
                                <!--end::Input-->
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <div class="fv-row mb-7">
                                <!--begin::Label-->
                                <label class="fs-6 fw-semibold mb-2">
                                    <span class="required">Tên nhân viên</span>
                                </label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <input type="text" class="form-control form-control-solid" ng-model="objSystemUser.FullName" />
                                <!--end::Input-->
                            </div>

                            <div class="fv-row mb-7">
                                <!--begin::Label-->
                                <label class="fs-6 fw-semibold mb-2">
                                    <span class="required">Mật khẩu</span>
                                </label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <input type="text" class="form-control form-control-solid" ng-model="objSystemUser.Password" />
                                <!--end::Input-->
                            </div>

                            <div class="fv-row mb-7">
                                <!--begin::Label-->
                                <label class="fs-6 fw-semibold mb-2">
                                    <span>Email</span>
                                </label>
                                <input type="text" class="form-control form-control-solid" ng-model="objSystemUser.Email" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer flex-center">
                        <button data-bs-dismiss="modal" class="btn btn-light me-3">Đóng</button>
                        <button type="submit" id="kt_modal_add_customer_submit" class="btn btn-primary" ng-click="insertOrUpdate($event)">
                            <span class="indicator-label">Cập nhật</span>
                            <span class="indicator-progress">
                                Please wait...
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


