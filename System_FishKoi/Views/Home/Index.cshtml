@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<script src="/Scripts/HomeController.js"></script>
<script src="/Directive/select2.js"></script>

<script>
    addController("HomeController", HomeController);
    addDirective("select2", select2);
</script>



<div id="kt_app_content_container" class="app-container container-xxl" ng-controller="HomeController">
    <div class="row gx-5 gx-xl-10">
        <!--begin::Col-->
        <div class="col-xl-5 mb-5">
            <!--begin::Lists Widget 19-->
            <div class="card card-stretch card-flush h-xl-100 border-hover-success">
                <!--begin::Heading-->
                <div class="card-header rounded bgi-no-repeat bgi-size-cover bgi-position-y-top bgi-position-x-center align-items-start h-225px" style="background-image:url('/assets/media/svg/shapes/top-green.png" ) data-bs-theme="light">
                    <!--begin::Title-->
                    <h3 class="card-title align-items-start flex-column text-white pt-15">
                        <span class="fw-bold fs-2x mb-3">Dashboard</span>
                        <div class="fs-4 text-white">
                            <span class="opacity-75">Báo cáo</span>

                            <span class="position-relative d-inline-block">
                                <a href="javascript:;" class="link-white opacity-75-hover fw-bold d-block mb-1">số liệu</a>

                                <!--begin::Separator-->
                                <span class="position-absolute opacity-50 bottom-0 start-0 border-2 border-body border-bottom w-100"></span>
                                <!--end::Separator-->
                            </span>

                            <span class="opacity-75">trong hệ thống</span>
                        </div>
                    </h3>
                </div>
                <!--end::Heading-->
                <!--begin::Body-->
                <div class="card-body mt-n20">
                    <!--begin::Stats-->
                    <div class="mt-n20 position-relative">
                        <!--begin::Row-->
                        <div class="row g-3 g-lg-6">
                            <!--begin::Col-->
                            <div class="col-6">
                                <!--begin::Items-->
                                <div class="bg-gray-100 bg-opacity-70 rounded-2 px-6 py-5">
                                    <!--begin::Symbol-->
                                    <div class="symbol symbol-30px me-5 mb-8">
                                        <span class="symbol-label">
                                            <i class="fa-solid fa-fish fs-1 text-primary"></i>
                                        </span>
                                    </div>
                                    <!--end::Symbol-->
                                    <!--begin::Stats-->
                                    <div class="m-0">
                                        <!--begin::Number-->
                                        <span class="text-gray-700 fw-bolder d-block fs-2qx lh-1 ls-n1 mb-1">{{filter.Total_FishKoi}}</span>
                                        <!--end::Number-->
                                        <!--begin::Desc-->
                                        <span class="text-gray-500 fw-semibold fs-6">Cá Koi</span>
                                        <!--end::Desc-->
                                    </div>
                                    <!--end::Stats-->
                                </div>
                                <!--end::Items-->
                            </div>
                            <!--end::Col-->
                            <!--begin::Col-->
                            <div class="col-6">
                                <!--begin::Items-->
                                <div class="bg-gray-100 bg-opacity-70 rounded-2 px-6 py-5">
                                    <!--begin::Symbol-->
                                    <div class="symbol symbol-30px me-5 mb-8">
                                        <span class="symbol-label">
                                            <i class="ki-outline ki-bank fs-1 text-primary"></i>
                                        </span>
                                    </div>
                                    <!--end::Symbol-->
                                    <!--begin::Stats-->
                                    <div class="m-0">
                                        <!--begin::Number-->
                                        <span class="text-gray-700 fw-bolder d-block fs-2qx lh-1 ls-n1 mb-1">{{filter.Total_Lake}}</span>
                                        <!--end::Number-->
                                        <!--begin::Desc-->
                                        <span class="text-gray-500 fw-semibold fs-6">Hồ cá</span>
                                        <!--end::Desc-->
                                    </div>
                                    <!--end::Stats-->
                                </div>
                                <!--end::Items-->
                            </div>
                            <!--end::Col-->
                            <!--begin::Col-->
                            <div class="col-6">
                                <!--begin::Items-->
                                <div class="bg-gray-100 bg-opacity-70 rounded-2 px-6 py-5">
                                    <!--begin::Symbol-->
                                    <div class="symbol symbol-30px me-5 mb-8">
                                        <span class="symbol-label">
                                            <i class="ki-outline ki-user fs-1 text-primary"></i>
                                        </span>
                                    </div>
                                    <!--end::Symbol-->
                                    <!--begin::Stats-->
                                    <div class="m-0">
                                        <!--begin::Number-->
                                        <span class="text-gray-700 fw-bolder d-block fs-2qx lh-1 ls-n1 mb-1">{{filter.Total_System_User}}</span>
                                        <!--end::Number-->
                                        <!--begin::Desc-->
                                        <span class="text-gray-500 fw-semibold fs-6">Nhân viên hệ thống</span>
                                        <!--end::Desc-->
                                    </div>
                                    <!--end::Stats-->
                                </div>
                                <!--end::Items-->
                            </div>
                            <!--end::Col-->
                            <!--begin::Col-->
                            <div class="col-6">
                                <!--begin::Items-->
                                <div class="bg-gray-100 bg-opacity-70 rounded-2 px-6 py-5">
                                    <!--begin::Symbol-->
                                    <div class="symbol symbol-30px me-5 mb-8">
                                        <span class="symbol-label">
                                            <i class="ki-outline ki-user-tick fs-1 text-primary"></i>
                                        </span>
                                    </div>
                                    <!--end::Symbol-->
                                    <!--begin::Stats-->
                                    <div class="m-0">
                                        <!--begin::Number-->
                                        <span class="text-gray-700 fw-bolder d-block fs-2qx lh-1 ls-n1 mb-1">{{filter.Total_Client_User}}</span>
                                        <!--end::Number-->
                                        <!--begin::Desc-->
                                        <span class="text-gray-500 fw-semibold fs-6">Thành viên đăng ký</span>
                                        <!--end::Desc-->
                                    </div>
                                    <!--end::Stats-->
                                </div>
                                <!--end::Items-->
                            </div>
                            <!--end::Col-->

                        </div>
                        <!--end::Row-->
                    </div>
                    <!--end::Stats-->
                </div>
                <!--end::Body-->
            </div>
            <!--end::Lists Widget 19-->
        </div>
        <!--end::Col-->
        <!--begin::Col-->
        <div class="col-xl-7 mb-5">
            <div class="card card-flush h-xl-100 border-hover-primary">
                <div class="card-header pt-7">
                    <div class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold text-gray-800">Báo cáo số loài cá Koi và tổng số lượng</span>
                    </div>
                </div>
                <div class="card-body d-flex align-items-end px-0 pt-3 pb-5">
                    <canvas style="min-height: 340px;" class="h-325px w-100 min-h-auto ps-4 pe-6" id="report_lake_total_fishkoi"></canvas>
                </div>
            </div>
        </div>

        <div class="col-xl-12 mb-5">
            <div class="card border-transparent">
                <div class="card-header">
                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold text-gray-900">Thông kế số liệu thông số nước</span>
                    </h3>

                    <div class="card-toolbar">
                        <select class="form-control w-200px" ng-model="filter_Lake_Setting.lakeID" select2 ng-change="getData_AVG_Lake_Setting()">
                            <option value="-1">--Chọn hồ--</option>
                            <option ng-repeat="item in list_Lake" value="{{item.LakeID}}">{{item.LakeName}}</option>
                        </select>
                    </div>
                </div>

                <div class="card-body">
                    <div class="m-0">
                        <canvas class="h-325px  ps-4 pe-6" style="width: 100% !important; height: auto;" id="waterChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
